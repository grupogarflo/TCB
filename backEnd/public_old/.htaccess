<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

	RewriteRule ^cancun-adventuretours$ https://www.cancunbay.com/cancun-adventure-tours [R=301,L]
    RewriteRule ^contact-us$ https://www.cancunbay.com/contact [R=301,L]
    RewriteRule ^mayanruins-tours$ https://www.cancunbay.com/mayan-ruins-tours [R=301,L]

    # Verifica que la URL exacta es /anterior
    RewriteCond %{HTTP_HOST} ^cancunbay\.com\.mx$ [NC]
    RewriteCond %{REQUEST_URI} ^/tour-$ [NC]
    RewriteRule ^ https://www.cancunbay.com.mx [R=301,L]

#RewriteEngine On

RewriteCond %{HTTP_HOST} ^cancunbay\.com.mx [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.cancunbay.com.mx/$1 [R=301,L]


#RewriteEngine On
RewriteCond %{HTTP_HOST} ^cancunbay\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://www.cancunbay.com/$1 [R=301,L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # valid that url has api
    RewriteCond %{REQUEST_URI} ^/api
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # valid that url has api
    RewriteCond %{REQUEST_URI} ^/export-tours
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    RewriteCond %{REQUEST_URI} !^/api
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.html [L]

</IfModule>
